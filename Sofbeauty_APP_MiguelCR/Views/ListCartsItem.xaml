<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sofbeauty_APP_MiguelCR.Views.ListCartsItem"
             Shell.NavBarIsVisible="False"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="Black"
             BackgroundImageSource="img01"
             Title="ListCartsItem">
    <VerticalStackLayout Padding="20,50,20,0" VerticalOptions="StartAndExpand">

        <Image x:Name="Cartsof" Source="cartsof" HeightRequest="70"/>

        <Button x:Name="BtnAddItem" Text="Add Item" Clicked="BtnAddItem_Clicked" BackgroundColor="HotPink" Margin="0,30,0,0"/>

        <Button x:Name="BtnCancel" Text="Cancel" Clicked="BtnCancel_Clicked" BackgroundColor="Salmon" TextColor="WhiteSmoke" CornerRadius="15" WidthRequest="160" Margin="10,0,0,0"/>

    </VerticalStackLayout>
</ContentPage>