<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sofbeauty_APP_MiguelCR.Views.LoginPage"
             Shell.NavBarIsVisible="False"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="Black"
             BackgroundImageSource="img01"
             >
    <VerticalStackLayout Padding="20,50,20,0" VerticalOptions="StartAndExpand">

        <Image x:Name="SofBeauty" Source="sofbeauty01" HeightRequest="250"/>

        <Entry x:Name="TxtUserName" Margin="0,30,0,10" Placeholder="Username/Email" PlaceholderColor="Purple" Keyboard="Email" FontSize="25" />

        <Entry x:Name="TxtPassword" Placeholder="Password" PlaceholderColor="Purple" Keyboard="Text" FontSize="25" IsPassword="True" />
        
        <Switch x:Name="SwShowPassword" IsToggled="False" Toggled="SwShowPassword_Toggled" />
        
        <Button x:Name="BtnLogin" Text="LOGIN" BackgroundColor="HotPink" Margin="0,30,0,0" Clicked="BtnLogin_Clicked" />

        <Button x:Name="BtnSignUp" BackgroundColor="Violet" Text="Sign Up" Margin="0,20,0,20" Clicked="BtnSignUp_Clicked"/>
        
        <Label x:Name="LblPasswordRecovery" Text="Password Recovery..." HorizontalTextAlignment="End" TextColor="DeepPink" />

    </VerticalStackLayout>
</ContentPage>