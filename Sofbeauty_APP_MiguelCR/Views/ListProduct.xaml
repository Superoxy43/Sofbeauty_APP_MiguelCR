<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sofbeauty_APP_MiguelCR.Views.ListProduct"
             Shell.NavBarIsVisible="False"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="Black"
             BackgroundImageSource="img01"
             Title="ListProduct">
    <VerticalStackLayout Padding="20,50,20,0" VerticalOptions="StartAndExpand" >

        <Button x:Name="BtnCreateProduct" Text="CreateProduct" BackgroundColor="HotPink" Margin="0,30,0,0" Clicked="BtnCreateProduct_Clicked"/>

        <Button x:Name="BtnCancel" Text="Cancel" Clicked="BtnCancel_Clicked" BackgroundColor="Salmon" TextColor="WhiteSmoke" CornerRadius="15" WidthRequest="160" Margin="10,0,0,0"/>



    </VerticalStackLayout>
</ContentPage>